{
	"extends": "standard",
	"plugins": ["standard", "promise", "extra-rules", "@babel"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2017,
		"requireConfigFile": false
	},
	"globals": {
		"$": true
	},
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"array-callback-return": 0,
		"prefer-arrow-callback": [
			"error",
			{
				"allowNamedFunctions": true
			}
		],
		"consistent-return": 0,
		"no-var": 2,
		"new-cap": 0,
		"indent": 0,
		"no-else-return": 1,
		"semi": [1, "always"],
		"space-unary-ops": 2,
		"no-tabs": 0,
		"no-undef": 1,
		"no-unused-vars": 1,
		"comma-dangle": 0,
		"extra-rules/no-commented-out-code": "warn",
		"prefer-template": 1,
		"space-before-function-paren": 0,
		"space-before-blocks": 0,
		"camelcase": 0,
		"handle-callback-err": ["error", "none"],
		"object-curly-spacing": ["error", "always"],
		"keyword-spacing": 0,
		"curly": 0,
		"block-spacing": 0,
		"quotes": 0,
		"spaced-comment": 0,
		"no-return-await": 0,
		"eol-last": 0
	}
}
